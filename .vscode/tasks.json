  {
    "version": "2.0.0",
   "tasks": [
    {
      "label": "Build C/C++ Single File",
      "type": "shell",
      "group": "build",
      "osx": {
        "command": "clang++",
        "args": [
          "${fileBasename}",
          "-o",
          "./build/${fileBasenameNoExtension}",
          "-std=c++11",
          "-O3",
          "-g3",
          "-Wall",
          "-fmessage-length=0",
          "-v"
        ]
      },
      "linux": {
        "command": "g++",
        "args": [
          "${fileBasename}",
          "-o",
          "./build/${fileBasenameNoExtension}.out",
          "-std=c++11",
          "-O3",
          "-g3",
          "-Wall",
          "-fmessage-length=0",
          "-march=native"
        ]
      },
      "windows": {
        "command": "g++",
        "args": [
          "${fileBasename}",
          "-o",
          ".\\build\\${fileBasenameNoExtension}.exe",
          "-std=c++11",
          "-O3",
          "-g3",
          "-Wall",
          "-fmessage-length=0",
          "-march=native"
        ]
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "label": "Build C/C++ Multiple Files",
      "type": "shell",
      "group": "build",
      "osx": {
        "command": "clang++",
        "args": [
          "*.cpp",
          "-o",
          "./build/${fileBasenameNoExtension}",
          "-std=c++11",
          "-O3",
          "-g3",
          "-Wall",
          "-fmessage-length=0",
          "-v"
        ]
      },
      "linux": {
        "command": "g++",
        "args": [
          "*.cpp",
          "-o",
          "./build/${fileBasenameNoExtension}.out",
          "-std=c++11",
          "-O3",
          "-g3",
          "-Wall",
          "-fmessage-length=0",
          "-march=native"
        ]
      },
      "windows": {
        "command": "g++",
        "args": [
          "*.cpp",
          "-o",
          ".\\build\\${fileBasenameNoExtension}.exe",
          "-std=c++11",
          "-O3",
          "-g3",
          "-Wall",
          "-fmessage-length=0",
          "-march=native"
        ]
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "label": "Build C/C++ OpenGL",
      "type": "shell",
      "group": "build",
      "osx": {
        "command": "clang++",
        "args": [
          "*.cpp",
          "-o",
          "./build/${fileBasenameNoExtension}",
          "-framework",
          "GLUT",
          "-framework",
          "OpenGL",
          "-O3",
          "-g3",
          "-Wall",
          "-fmessage-length=0",
          "-Wno-deprecated",
          "-v"
        ]
      },
      "linux": {
        "command": "g++",
        "args": [
          "*.cpp",
          "-o",
          "./build/${fileBasenameNoExtension}.out",
          "-std=c++11",
          "-lGL",
          "-lglut",
          "-O3",
          "-g3",
          "-Wall",
          "-fmessage-length=0",
          "-march=native"
        ]
      },
      "windows": {
        "command": "g++",
        "args": [
          "*.cpp",
          "-o",
          ".\\build\\${fileBasenameNoExtension}.exe",
          "-lglu32",
          "-lopengl32",
          "-lfreeglut",
          "-O3",
          "-g3",
          "-Wall",
          "-fmessage-length=0",
          "-march=native"
        ]
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "label": "1:  Build and Run C/C++ Single File",
      "type": "shell",
      "group": "build",
      "dependsOn": [
        "Build C/C++ Single File"
      ],
      "dependsOrder": "sequence",
      "osx": {
        "command": "open ./build/${fileBasenameNoExtension}",
        "args": []
      },
      "linux": {
        "command": "lxterminal -e \"bash -c ./build/${fileBasenameNoExtension}.out && read -p 'Press [enter] to continue...'\"",
        "args": []
      },
      "windows": {
        "command": "Start-Process cmd '/c .\\build\\${fileBasenameNoExtension}.exe & pause'",
        "args": []
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "label": "2:  Build and Run C/C++ Multiple Files",
      "type": "shell",
      "group": "build",
      "dependsOn": [
        "Build C/C++ Multiple Files"
      ],
      "dependsOrder": "sequence",
      "osx": {
        "command": "open ./build/${fileBasenameNoExtension}",
        "args": []
      },
      "linux": {
        "command": "lxterminal -e \"bash -c ./build/${fileBasenameNoExtension}.out && read -p 'Press [enter] to continue...'\"",
        "args": []
      },
      "windows": {
        "command": "Start-Process cmd '/c .\\build\\${fileBasenameNoExtension}.exe & pause'",
        "args": []
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "label": "3:  Build and Run C/C++ OpenGL",
      "type": "shell",
      "group": "build",
      "dependsOn": [
        "Build C/C++ OpenGL"
      ],
      "dependsOrder": "sequence",
      "osx": {
        "command": "./build/${fileBasenameNoExtension}",
        "args": []
      },
      "linux": {
        "command": "./build/${fileBasenameNoExtension}.out",
        "args": []
      },
      "windows": {
        "command": ".\\build\\${fileBasenameNoExtension}.exe",
        "args": []
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "problemMatcher": [
        "$gcc"
      ]
    }
  ]
}
